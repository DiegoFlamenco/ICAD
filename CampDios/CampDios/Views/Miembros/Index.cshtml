@model IEnumerable<CampDios.Modelos.Miembros_Edad> 
@{
    ViewBag.Title = "Miembros-Inicio";
}

<center><h2>Miembros - Inicio(Numero de miembros @Model.Count())</h2></center>

<p>
    <a href="@Url.Action("Create","Miembros")" class="btn btn-primary"><i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Nuevo miembro</a>&nbsp;
    <a href="@Url.Action("Index","HistoriaEspirituals")" class="btn btn-default"><i class="fa fa-book fa-lg" aria-hidden="true"></i> Historial espiritual</a>&nbsp;
</p>
<div style="overflow:auto;">
    <div class="table-responsive table-hover">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdMiembro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DUI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NIT)
                </th>
                <th>
                    Fecha de nacimiento
                    <!--@Html.DisplayNameFor(model => model.FechaNacimiento)-->
                </th>
                <th>
                    Edad
                </th>
                <th>
                    Dirección
                    <!--@Html.DisplayNameFor(model => model.Direccion)-->
                </th>
                <th>
                    Dirección 1
                    <!--@Html.DisplayNameFor(model => model.Direccion1)-->
                </th>
                <th>
                    Dirección 2
                    <!--@Html.DisplayNameFor(model => model.Direccion2)-->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cel)
                </th>
                <th>
                    Capacitación
                    <!--@Html.DisplayNameFor(model => model.Capacitaciones.Nombre)-->
                </th>
                <th>
                    Estado civil
                    <!--@Html.DisplayNameFor(model => model.EstadoCivil.Estado)-->
                </th>
                <th>
                    Liderazgo Corporativo
                    <!--@Html.DisplayNameFor(model => model.LiderazgoCorporativo.Nombre)-->
                </th>
                <th>
                    Hermano mayor
                    <!--@Html.DisplayNameFor(model => model.Miembros2.Nombres)-->
                </th>
                <th>
                    Profesión
                    <!--@Html.DisplayNameFor(model => model.Profesion.Oficio)-->
                </th>
                <th>
                    Liderazgo pastoral
                    <!--@Html.DisplayNameFor(model => model.Roles.Rol)-->
                </th>
                <th>
                    Sexo
                    <!--@Html.DisplayNameFor(model => model.Sexo)-->
                </th>
                <th></th>
                <th>Opciones</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
              
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdMiembro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombres)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DUI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NIT)
                    </td>
                    <td>
                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.FechaNacimiento))
                        <!--Html.DisplayFor(modelItem => item.FechaNacimiento)-->
                    </td> 
                    <td>
                        @Html.DisplayFor(modelItem=>item.Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCapacitacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreEstadoC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreCorporativo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreHermanoM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreProfesion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreRol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SexoDescripcion)
                    </td> 
                    <td>@Html.ActionLink("Editar", "Edit", new { id = item.IdMiembro }, new { @class = "btn btn-success" })</td>
                    <td>@Html.ActionLink("Detalles", "Details", null, new { id = item.IdMiembro }, new { @class = "btn btn-info" })</td>
                    <td>@Html.ActionLink("Borrar", "Delete", null, new { id = item.IdMiembro }, new { @class = "btn btn-danger" })</td> 
                </tr>
            }

        </table>
    </div>
</div>