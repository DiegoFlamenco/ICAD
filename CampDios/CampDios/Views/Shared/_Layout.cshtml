<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        body {
            padding-top: 0px;
            margin-top: 0px;
        }
    </style>
</head>
<body>
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="@Url.Action("Index","Home")">
                        <span>Campamento de Dios</span>
                    </a>
                </li>
                <li>
                    @Html.ActionLink("Iglesias", "Index", "Iglesias")
                </li>
                <li>
                    @Html.ActionLink("Miembros", "Index", "Miembros")
                </li>
                <li>
                    @Html.ActionLink("Zonas", "Index", "Zonas")
                    <ul>
                        <li>@Html.ActionLink("Comunidad", "Index", "Comunidad")</li>
                        <li>@Html.ActionLink("Grupos", "Index", "Grupo")</li>
                        <li>@Html.ActionLink("Parentesco", "Index", "DetalleFamilias")</li>
                    </ul>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><span class="glyphicon glyphicon-tasks" aria-hidden="true"></span></a>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>
</html>
