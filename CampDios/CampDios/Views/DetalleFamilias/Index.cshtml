@model IEnumerable<CampDios.Modelos.DetalleFamilia>

@{
    ViewBag.Title = "Index";
}

<center><h2>Parentesco</h2></center>

<p>
    <a href="@Url.Action("Create", "DetalleFamilias")" class="btn btn-primary"><i class="fa fa-plus-square fa-lg" aria-hidden="true"></i> Nuevo parentesco  </a>&nbsp;
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Miembros.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Miembros1.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parentescos.Parentesco)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Miembros.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Miembros1.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parentescos.Parentesco)
        </td>
        <td>
           <td>@Html.ActionLink("Editar", "Edit", new { id=item.IdDetalleFamilia }, new { @class = "btn btn-success" }) </td>
           <td> @Html.ActionLink("Detalles", "Details", new { id=item.IdDetalleFamilia }, new { @class = "btn btn-info" }) </td>
