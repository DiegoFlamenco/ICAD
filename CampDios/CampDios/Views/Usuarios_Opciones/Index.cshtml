    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Lectura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Escritura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edicion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opciones.Nombre_Opciones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuarios.Login)
        </td>

        <td>@Html.ActionLink("Editar", "Edit", new { id = item.idUsuario_Opciones }, new { @class = "btn btn-success" })</td>
        <td>@Html.ActionLink("Detalles", "Details", null, new { id = item.idUsuario_Opciones }, new { @class = "btn btn-info" })</td>
        <td>@Html.ActionLink("Borrar", "Delete", null, new { id = item.idUsuario_Opciones }, new { @class = "btn btn-danger" })</td>

