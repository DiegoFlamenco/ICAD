@model IEnumerable<CampDios.Modelos.Usuarios_Opciones>

@{
    ViewBag.Title = "Index";
}

<h2>Administración de Permisos por Usuario </h2>

<p>
    <a href="@Url.Action("Create","Usuarios_Opciones")" class="btn btn-primary"><i class="fa fa-plus-square fa-lg" aria-hidden="true"></i>Nuevo Permiso</a>&nbsp;
    <a href="@Url.Action("Index","Usuarios")" class="btn btn-default"><i class="fa fa-book fa-lg" aria-hidden="true"></i> Usuarios</a>&nbsp;
    <a href="@Url.Action("Index","Modulos")" class="btn btn-default"><i class="fa fa-book fa-lg" aria-hidden="true"></i> Módulos</a>&nbsp;
    <a href="@Url.Action("Index","Opciones")" class="btn btn-default"><i class="fa fa-book fa-lg" aria-hidden="true"></i> Opciones(Vistas)</a>&nbsp;

</p>
<table class="table">
    <tr>
        <th>
            <h5><strong>Lectura</strong></h5>
        </th>
        <th>
            <h5><strong>Escritura</strong></h5>
        </th>
        <th>
            <h5><strong>Edición</strong></h5>
        </th>
        <th>
            <h5><strong>Opciones - Vistas</strong></h5>
        </th>
        <th>
            <h5><strong>Login - Nombre de usuario</strong></h5>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Lectura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Escritura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edicion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opciones.Nombre_Opciones)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuarios.Login)
        </td>

        <td>@Html.ActionLink("Editar", "Edit", new { id = item.idUsuario_Opciones }, new { @class = "btn btn-success" })</td>
        <td>@Html.ActionLink("Detalles", "Details", null, new { id = item.idUsuario_Opciones }, new { @class = "btn btn-info" })</td>
        <td>@Html.ActionLink("Borrar", "Delete", null, new { id = item.idUsuario_Opciones }, new { @class = "btn btn-danger" })</td>

    </tr>
}

</table>
