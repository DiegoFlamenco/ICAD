@model CampDios.Modelos.Opciones

@{
    ViewBag.Title = "Borrar Opciones";
}

<h2>Eliminar</h2>

<h3>¿Esta seguro que desea eliminar esta Opción(Vista)?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre_Opciones)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre_Opciones)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Modulos.Nombre_Modulos)
        </dt>

